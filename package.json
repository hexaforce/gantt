{
  "name": "hexaforce-gantt",
  "version": "0.6.1",
  "description": "A simple, modern, interactive gantt library for the web",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "yarn run dev",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "fmt": "prettier --write \"./**/*.{js,scss,htmlmjs}\"",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/frappe/gantt.git"
  },
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "keywords": [
    "gantt",
    "svg",
    "simple gantt",
    "project timeline",
    "interactive gantt",
    "project management"
  ],
  "author": "Faris Ansari",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/frappe/gantt/issues"
  },
  "homepage": "https://github.com/frappe/gantt",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "babel-preset-env": "^1.7.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "rollup": "^4.9.6",
    "rollup-plugin-sass": "^1.12.21",
    "rollup-plugin-terser": "^7.0.2"
  },
  "prettier": {
    "trailingComma": "all",
    "bracketSpacing": true,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 1024
  },
  "eslintIgnore": [
    "dist"
  ]
}
